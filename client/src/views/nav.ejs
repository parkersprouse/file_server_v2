<nav>
  <article x-data='files' class='menu--start breadcrumbs'>
    <span>
      <template x-if='at_root'>
        <span>[root]</span>
      </template>
      <template x-if='!at_root'>
        <a href='/'>[root]</a>
      </template>
    </span>
    <template x-for='crumb in breadcrumbs'>
      <span style='display: contents;'>
        <span class='bc-separator'></span>
        <template x-if='crumb.path'>
          <a :href='crumb.path' x-text='crumb.label'></a>
        </template>
        <template x-if='!crumb.path'>
          <span x-text='crumb.label'></span>
        </template>
      </span>
    </template>
  </article>

